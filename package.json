{
  "name": "@donkeyclip/motorcortex-player",
  "version": "2.5.0",
  "description": "Player plugin for MotorCortex",
  "main": "dist/motorcortex-player.cjs.js",
  "module": "dist/motorcortex-player.esm.js",
  "browser": "dist/motorcortex-player.umd.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/donkeyclip/motorcortex-player"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "update:packages": "npm update --save/--save-dev",
    "lint:js": "eslint -c .eslintrc.js src/**/*.js",
    "lint": "npm run lint:js",
    "lint:fix": "npm run lint:js -- --fix",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --config ./demo/webpack.config.js --mode=development --progress ",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test:prod": "npm run lint",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "motorcortex",
    "player"
  ],
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "@donkeyclip/motorcortex": ">= 7.4.0 < 8"
  },
  "devDependencies": {
    "@babel/cli": "7.17.3",
    "@babel/core": "7.17.5",
    "@babel/eslint-parser": "7.17.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.16.7",
    "@babel/plugin-syntax-jsx": "7.16.7",
    "@babel/plugin-transform-react-jsx": "7.17.3",
    "@babel/preset-env": "7.16.11",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@donkeyclip/motorcortex": "7.9.2",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-html": "0.2.4",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "9.0.0",
    "@size-limit/preset-big-lib": "6.0.4",
    "babel-loader": "8.2.3",
    "commitizen": "4.2.4",
    "concurrently": "7.0.0",
    "core-js": "3.21.1",
    "css-loader": "6.6.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-sonarjs": "0.11.0",
    "html-loader": "3.1.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "path-browserify": "1.0.1",
    "postcss": "8.4.6",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "rollup": "2.67.2",
    "rollup-plugin-html": "0.2.1",
    "rollup-plugin-import-css": "3.0.2",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-svg": "2.0.0",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "19.0.2",
    "size-limit": "6.0.4",
    "style-loader": "3.3.1",
    "svg-inline-loader": "0.8.2",
    "svg-url-loader": "7.1.1",
    "webpack": "5.69.1",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.4"
  }
}
