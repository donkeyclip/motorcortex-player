{
  "name": "@kissmybutton/motorcortex-player",
  "version": "2.2.0",
  "description": "Player plugin for MotorCortex",
  "main": "dist/motorcortex-player.cjs.js",
  "module": "dist/motorcortex-player.esm.js",
  "browser": "dist/motorcortex-player.umd.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kissmybutton/teo-motorcortex-player.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "update:packages": "npm update --save/--save-dev",
    "lint:js": "eslint -c .eslintrc.js src/**/*.js",
    "lint": "npm run lint:js",
    "lint:fix": "npm run lint:js -- --fix",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build && webpack serve --inline --hot --config ./demo/webpack.config.js",
    "build:demo": "webpack --config ./demo/webpack.config.js",
    "test:prod": "npm run lint",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist"
  },
  "keywords": [
    "motorcortex",
    "player"
  ],
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "@kissmybutton/motorcortex": "^7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.15.0",
    "@babel/eslint-parser": "7.15.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.14.5",
    "@babel/preset-env": "7.15.0",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@kissmybutton/motorcortex": "7.2.4",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.2",
    "@rollup/plugin-html": "0.2.3",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "babel-loader": "8.2.2",
    "commitizen": "4.2.4",
    "coveralls": "3.1.1",
    "css-loader": "5.2.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-sonarjs": "0.10.0",
    "html-loader": "2.1.2",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "path-browserify": "1.0.1",
    "postcss": "8.3.6",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "rollup": "2.56.2",
    "rollup-plugin-html": "0.2.1",
    "rollup-plugin-import-css": "2.0.1",
    "rollup-plugin-postcss": "4.0.1",
    "rollup-plugin-svg": "2.0.0",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "17.4.4",
    "style-loader": "2.0.0",
    "svg-inline-loader": "0.8.2",
    "svg-url-loader": "7.1.1",
    "webpack": "5.50.0",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "3.11.2",
    "whatwg-fetch": "3.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod"
    }
  }
}
